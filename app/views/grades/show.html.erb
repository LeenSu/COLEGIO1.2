<%- model_class = Grade -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @grade.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:period_id) %>:</strong></dt>
  <dd><%= @grade.period_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:current) %>:</strong></dt>
  <dd><%= @grade.current %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              grades_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_grade_path(@grade), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              grade_path(@grade),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
