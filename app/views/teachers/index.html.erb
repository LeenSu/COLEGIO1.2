<%- model_class = Teacher -%>
<div class="page-header">
  <h1>Profesores</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name('Nombres') %></th>
      <th><%= model_class.human_attribute_name('Apellidos') %></th>
      <th><%= model_class.human_attribute_name('Tel/Cel') %></th>
      <th><%= model_class.human_attribute_name('Informacion') %></th>
    </tr>
  </thead>
  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.email %></td>
        <td><%= teacher.name %></td>
        <td><%= teacher.last_name %></td>
        <td><%= teacher.phone %></td>
        <td><%= teacher.about %></td>
        <td>
          <%= link_to t('.edit', :default => t("Editar")),
                      edit_teacher_path(teacher), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("Eliminar")),
                      teacher_path(teacher),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Estas Seguro?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("Nuevo Profesor")),
            new_teacher_path,
            :class => 'btn btn-primary' %>
