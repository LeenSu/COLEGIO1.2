<%= form_for @score, :html => { :class => "form-horizontal score" } do |f| %>

  <% if @score.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@score.errors.count, "error") %> prohibited this score from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @score.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-2 col-sm-2">
      <div class="control-group">
        <%= f.label :score_one, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :score_one, :class => 'form-control' %>
        </div>
        <%=f.error_span(:score_one) %>
      </div>
    </div>
    <div class="col-md-2 col-sm-2">
      <div class="control-group">
        <%= f.label :score_two, :class => 'control-label' %>
        <div class="control">
          <%= f.text_field :score_two, :class => 'form-control' %>
        </div>
        <%=f.error_span(:score_two) %>
      </div>
    </div>
    <div class="col-md-2 col-sm-2">
      <div class="control-group">
        <%= f.label :score_three, :class => 'control-label' %>
        <div class="control">
          <%= f.text_field :score_three, :class => 'form-control' %>
        </div>
        <%=f.error_span(:score_three) %>
      </div>
    </div>
    <div class="col-md-2 col-sm-2">
      <div class="control-group">
        <%= f.label :score_four, :class => 'control-label' %>
        <div class="control">
          <%= f.text_field :score_four, :class => 'form-control' %>
        </div>
        <%=f.error_span(:score_four) %>
      </div>
    </div>
    <div class="col-md-2 col-sm-2">
      <div class="control-group">
        <%= f.label :score_test, :class => 'control-label' %>
        <div class="control">
          <%= f.text_field :score_test, :class => 'form-control' %>
        </div>
        <%=f.error_span(:score_test) %>
      </div>
    </div>
    <div class="col-md-2 col-sm-2">
      <div class="control-group">
        <%= f.label :score_final, :class => 'control-label' %>
        <div class="control">
          <%= f.text_field :score_final, :class => 'form-control' %>
        </div>
        <%=f.error_span(:score_final) %>
      </div>
    </div>
  </div><br>

<% if action_name == 'edit_for_teacher' %>
        <%= hidden_field_tag :student_id, @score.student_id %>
        <%= hidden_field_tag :course_id, @score.course_id %>
<% else %>
  <div class="form-group">
    <%= f.label :student_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select :student_id,set_students.collect{|s| [full_name(s), s.id]},{}, :class => 'form-control' %>
    </div>
    <%=f.error_span(:student_id) %>
  </div>
  <div class="form-group">
    <%= f.label :course_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select :course_id,set_courses.collect{|c| [[c.name, c.grade.period.name].join(" "), c.id]},{}, :class => 'form-control' %>
    </div>
    <%=f.error_span(:course_id) %>
  </div>
<% end %>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                scores_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
